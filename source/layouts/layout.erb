<!doctype html>
<html lang="<%= I18n.locale.to_s %>">
  <head>
    <title><%= current_page.data.title + " | " + I18n.t(:title) %></title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="google-site-verification" content="Hd4uf1DcsW07ExTeXGIscOFiBM9dhZmE_FI3AgD-bQ8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
    <link rel="manifest" href="/assets/images/site.webmanifest">
    <link rel="mask-icon" href="/assets/images/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/assets/images/favicon.ico">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-config" content="/assets/images/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <meta name="description" content="<%= current_page.data.description + ' ' + I18n.t(:description) %>">
    <%= stylesheet_link_tag "site", "https://unpkg.com/ionicons@4.5.10-1/dist/css/ionicons.min.css" %>
  </head>
  <body>
    <%= partial "includes/header" %>

    <main role="main">
      <%= yield %>
    </main>

    <%= partial "includes/footer" %>
    <%= javascript_include_tag "site" %>
  </body>
</html>
