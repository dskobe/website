<!doctype html>
<html lang="en">
  <head>
    <title><%= current_page.data.title + " | " + t('title') %></title>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="google-site-verification" content="<%= data.config.google.verification %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/favicon-16x16.png">
    <link rel="manifest" href="/assets/images/site.webmanifest">
    <link rel="mask-icon" href="/assets/images/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/assets/images/favicon.ico">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-config" content="/assets/images/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <meta name="description" content="<%= current_page.data.description + ' ' + t('description') %>">
    <%= stylesheet_link_tag "https://unpkg.com/ionicons@4.5.10-1/dist/css/ionicons.min.css", "https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css", "styles" %>
  </head>
  <body>
    <%= partial "includes/header" %>

    <main role="main">
      <div class="container-fluid p-0 mb-5">
        <%= image_tag current_page.data.banner, alt: t('title'), class: 'img-fluid d-block w-100' %>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-12">
            <%= yield %>
          </div>
        </div>
      </div>

      <%= partial "includes/related_category", :locals => {} %>
    </main>

    <%= partial "includes/footer" %>
    <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>
    <%= javascript_include_tag "styles", "script" %>
  </body>
</html>
