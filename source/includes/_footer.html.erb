<footer class="jumbotron jumbotron-fluid bg-secondary text-light" style="padding-bottom:1rem;margin-bottom:0;">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <p><%= data.config.footer.school %></p>
        <p><%= data.config.footer.address %></p>

        <%= image_tag 'ib-world-school-logo_footer.png', alt: data.config.title %>
        <%= image_tag 'DAS_1500_transparent_V2.png', alt: data.config.title, style: 'margin-left:20px;'  %>
      </div>

      <div class="col-md-3">
        <ul class="list-unstyled">
          <%= partial "includes/footer_menu" %>
        </ul>
      </div>

      <div class="col-md-3">
        <ul class="list-unstyled">
          <li><i class="icon ion-md-call"></i> <%= data.config.contact.phone %></li>
          <li><i class="icon ion-md-paper"></i> <%= data.config.contact.fax %></li>
          <li><i class="icon ion-md-mail"></i> <%= mail_to data.config.contact.mailto, data.config.contact.mailto, class: 'text-light' %></li>
        </ul>
        <ul class="list-inline">
          <li class="list-inline-item display-4">
            <a href="https://www.facebook.com/dskobe.org" class="text-light"><i class="icon ion-logo-facebook"></i></a>
          </li>
        </ul>
      </div>
    </div>

    <hr>
    <p class="float-right"><a href="#" class="text-light"><%= data.config.footer.backtotop %></a></p>
    <p><%= data.config.footer.copyright %></p>
  </div>
</footer>
